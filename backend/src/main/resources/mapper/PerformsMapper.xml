<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangxiaohan.dao.PerformsDao">

    <select id="findBySearch" resultType="com.wangxiaohan.entity.Performs">
        select * from performs
        <where>
            <if test="params != null and params.CID != null and params.CID != ''">
                and CID like concat('%',#{params.CID},'%')
            </if>
            <if test="params != null and params.sname != null and params.sname != ''">
                and sname like concat('%',#{params.sname},'%')
            </if>
            <if test="params != null and params.performer != null and params.performer != ''">
                and performer like concat('%',#{params.performer},'%')
            </if>
        </where>
    </select>

</mapper>
