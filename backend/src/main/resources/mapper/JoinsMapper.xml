<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangxiaohan.dao.JoinsDao">

    <select id="findBySearch" resultType="com.wangxiaohan.entity.Joins">
        select * from joins
        <where>
            <if test="params != null and params.CID != null and params.CID != ''">
                and CID like concat('%',#{params.CID},'%')
            </if>
            <if test="params != null and params.bname != null and params.bname != ''">
                and bname like concat('%',#{params.bname},'%')
            </if>
        </where>
    </select>

</mapper>
