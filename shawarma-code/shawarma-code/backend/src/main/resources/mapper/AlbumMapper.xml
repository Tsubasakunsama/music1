<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wangxiaohan.dao.AlbumDao">
    <select id="findBySearch" resultType="com.wangxiaohan.entity.Album">
        select * from album
        <where>
            <if test="params !=null and params.aname!=null and params.aname!=''">
                and aname like concat('%',#{params.aname},'%')
            </if>
            <if test="params !=null and params.atime!=null and params.atime!=''">
                and atime like concat('%',#{params.atime},'%')
            </if>
            <if test="params !=null and params.aband!=null and params.aband!=''">
                and aband like concat('%',#{params.aband},'%')
            </if>
            <if test="params !=null and params.company!=null and params.company!=''">
                and company like concat('%',#{params.company},'%')
            </if>
        </where>
    </select>
</mapper>
